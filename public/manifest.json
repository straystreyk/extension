{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "0.0.1",
  "description": "A Web Extension created with Vite",
  "default_locale": "en",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "background": {
    "service_worker": "./assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./assets/content-script.js"
      ],
      "css": ["./assets/shifronim.css"],
      "run_at": "document_start"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}